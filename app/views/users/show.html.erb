<div class="page-header">
  <h3><%= @user.username.capitalize %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Photos</dt>
      <dd><%= @user.photos.count %></dd>

      <dt>Likes</dt>
      <dd><%= @user.likes.count %></dd>

      <dt>Comments</dt>
      <dd><%= @user.comments.count %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/photos" class="btn btn-primary">
        Back
      </a>

    </div>
  </div>
</div>

<% @photos.each do |photo| %>
      <center>
      <tr>
        <td><%= photo.caption %></td>
        <td><img src="<%= photo.image %>" class="img-responsive"></td>
        <td>-</td>
      </tr>
      <center>
      <% end %>
